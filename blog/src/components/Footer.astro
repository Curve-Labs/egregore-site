<style>
  .footer {
    border-top: 1px solid var(--border);
    margin-top: var(--space-3xl);
    padding: var(--space-3xl) var(--space-lg) var(--space-xl);
  }

  .footer-inner {
    max-width: 1000px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.5fr 2fr;
    gap: var(--space-3xl);
  }

  .footer-brand {
    max-width: 320px;
  }

  .footer-logo {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text);
    display: block;
    margin-bottom: var(--space-md);
  }

  .footer-address {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .footer-links {
    display: flex;
    justify-content: flex-end;
    gap: var(--space-3xl);
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .footer-heading {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: var(--text);
    margin-bottom: var(--space-sm);
  }

  .footer-section a {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-section a:hover {
    color: var(--accent);
  }

  .footer-bottom {
    max-width: 1000px;
    margin: var(--space-2xl) auto 0;
    padding-top: var(--space-lg);
    border-top: 1px solid var(--border);
    text-align: center;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .footer-inner {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }

    .footer-brand {
      max-width: none;
    }

    .footer-links {
      justify-content: flex-start;
      gap: var(--space-2xl);
      flex-wrap: wrap;
    }
  }
</style>
