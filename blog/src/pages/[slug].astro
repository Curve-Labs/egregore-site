---
import { getCollection, type CollectionEntry } from 'astro:content';
import Base from '../layouts/Base.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, subtitle, date, readTime, category, author, tags } = post.data;
const { Content, headings } = await post.render();

// Generate OG image URL - use a fallback default image
const ogImage = `/og/${post.slug}.png`;

// Filter to h2 and h3 only for TOC
const tocHeadings = headings.filter(h => h.depth === 2 || h.depth === 3);

// Ensure date is a Date object
const postDate = date instanceof Date ? date : new Date(date);

// Build share text with hashtags
const articleUrl = `https://blog.curvelabs.eu/${post.slug}`;
const hashtagString = tags && tags.length > 0 ? tags.map(t => `#${t.replace(/\s+/g, '')}`).join(' ') : '';
const twitterText = `${title}\n\n${subtitle || ''}\n\n${hashtagString}\n\nvia @curvelabs`;
const linkedinUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(articleUrl)}`;
const twitterUrl = `https://x.com/intent/tweet?text=${encodeURIComponent(twitterText)}&url=${encodeURIComponent(articleUrl)}`;

// Article keywords
const articleKeywords = tags && tags.length > 0 ? tags.join(', ') + ', Curve Labs, research' : 'Curve Labs, research';

// Structured data for article
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: title,
  description: subtitle || title,
  image: ogImage,
  datePublished: postDate.toISOString(),
  dateModified: postDate.toISOString(),
  author: {
    '@type': 'Person',
    name: author || 'Curve Labs'
  },
  publisher: {
    '@type': 'Organization',
    name: 'Curve Labs',
    logo: {
      '@type': 'ImageObject',
      url: 'https://blog.curvelabs.eu/curve_labs_logo_white.png'
    }
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': articleUrl
  },
  keywords: tags && tags.length > 0 ? tags.join(', ') : undefined
};
---

<Base
  title={title}
  description={subtitle || title}
  image={ogImage}
  keywords={articleKeywords}
  type="article"
  publishedTime={postDate.toISOString()}
  author={author || 'Curve Labs'}
>
  <div class="article-layout">
    <aside class="back-sidebar">
      <a href="/" class="back-link">
        <span class="back-arrow">←</span>
        <span>Back to blog</span>
      </a>
    </aside>

    <article class="post">
      <!-- Structured Data -->
      <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

      <!-- Post Header -->
      <header class="post-header">
        <div class="post-meta">
          <span class="category">{category}</span>
          <span class="divider">•</span>
          <time datetime={postDate.toISOString()}>
            {postDate.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
          </time>
          <span class="divider">•</span>
          <span class="read-time">{readTime}</span>
        </div>

        <h1 class="post-title">{title}</h1>
        {subtitle && <p class="post-subtitle">{subtitle}</p>}

        <div class="post-author">
          <span class="author-label">by</span>
          <span class="author-name">{author || 'Curve Labs'}</span>
        </div>
      </header>

      <!-- Post Content -->
      <div class="post-content">
        <Content />
      </div>

      <!-- Post Footer -->
      <footer class="post-footer">
        {tags && tags.length > 0 && (
          <div class="post-tags">
            {tags.map((tag) => (
              <a href={`/?tag=${encodeURIComponent(tag)}#explore`} class="tag">#{tag}</a>
            ))}
          </div>
        )}

        <div class="footer-divider">
          <div class="line"></div>
          <div class="diamond"></div>
          <div class="line"></div>
        </div>
        <a href="/" class="back-link mobile-back">
          <span class="back-arrow">←</span>
          <span>Back to blog</span>
        </a>
      </footer>
    </article>

    <aside class="toc-sidebar">
      {tocHeadings.length > 0 && (
        <nav class="toc-nav">
          <span class="toc-title">Contents</span>
          <ul>
            {tocHeadings.map(heading => (
              <li class={heading.depth === 3 ? 'toc-h3' : ''}>
                <a href={`#${heading.slug}`}>{heading.text}</a>
              </li>
            ))}
          </ul>
        </nav>
      )}

      <div class="share-section">
        <span class="share-title">Share</span>
        <div class="share-buttons">
          <a
            href={twitterUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="share-btn"
            title="Share on X"
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
          <a
            href={linkedinUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="share-btn"
            title="Share on LinkedIn"
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
          <button
            class="share-btn copy-btn"
            title="Copy link"
            data-url={articleUrl}
            data-share-text={`${title}\n\n${subtitle || ''}\n\n${hashtagString}\n\n${articleUrl}`}
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
          </button>
        </div>
      </div>
    </aside>
  </div>
</Base>

<style is:global>
  .article-layout {
    display: flex;
    flex-direction: row;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    gap: 3rem;
    align-items: flex-start;
  }

  .article-layout > .back-sidebar {
    width: 140px;
    flex-shrink: 0;
    align-self: flex-start;
    padding-top: 5rem;
    order: 1;
    position: sticky;
    top: 7rem;
  }

  .article-layout > .post {
    flex: 1;
    max-width: 720px;
    min-width: 0;
    order: 2;
  }

  .article-layout > .toc-sidebar {
    width: 200px;
    flex-shrink: 0;
    align-self: flex-start;
    padding-top: 5rem;
    order: 3;
    position: sticky;
    top: 7rem;
  }
</style>

<style>
  .post-header {
    padding: var(--space-3xl) 0 var(--space-2xl);
    border-bottom: 1px solid var(--border);
    margin-bottom: var(--space-2xl);
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-bottom: var(--space-lg);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .category {
    color: var(--accent);
  }

  .divider {
    color: var(--text-dim);
  }

  .post-title {
    font-family: var(--font-gothic);
    font-size: 3rem;
    color: var(--text);
    margin-bottom: var(--space-md);
    line-height: 1.1;
  }

  .post-subtitle {
    font-size: 1.25rem;
    color: var(--text-soft);
    line-height: 1.5;
    margin-bottom: var(--space-lg);
  }

  .post-author {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .author-name {
    color: var(--text-soft);
  }

  /* Post Content Styles */
  .post-content {
    font-size: 1.0625rem;
    line-height: 1.75;
  }

  .post-content :global(h2) {
    font-family: var(--font-gothic);
    font-size: 1.75rem;
    color: var(--text);
    margin: var(--space-2xl) 0 var(--space-lg);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--border);
    scroll-margin-top: 6rem;
  }

  .post-content :global(h3) {
    font-family: var(--font-gothic);
    font-size: 1.25rem;
    color: var(--text);
    margin: var(--space-xl) 0 var(--space-md);
    scroll-margin-top: 6rem;
  }

  .post-content :global(p) {
    margin-bottom: var(--space-lg);
    color: var(--text-soft);
  }

  .post-content :global(strong) {
    color: var(--text);
    font-weight: 600;
  }

  .post-content :global(em) {
    font-style: italic;
  }

  .post-content :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-decoration-color: var(--accent-soft);
    text-underline-offset: 2px;
    transition: text-decoration-color var(--transition-fast);
  }

  .post-content :global(a:hover) {
    text-decoration-color: var(--accent);
  }

  .post-content :global(blockquote) {
    margin: var(--space-xl) 0;
    padding: var(--space-lg);
    padding-left: var(--space-xl);
    border-left: 3px solid var(--accent);
    background: var(--bg-card);
    border-radius: 0;
  }

  .post-content :global(blockquote p) {
    margin-bottom: 0;
    font-style: italic;
    color: var(--text);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: var(--space-lg) 0;
    padding-left: var(--space-xl);
    color: var(--text-soft);
  }

  .post-content :global(li) {
    margin-bottom: var(--space-sm);
  }

  .post-content :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: var(--space-2xl) 0;
  }

  .post-content :global(pre) {
    margin: var(--space-xl) 0;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    margin: var(--space-xl) 0;
  }

  /* Post Footer */
  .post-footer {
    margin-top: var(--space-3xl);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--border);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-xl);
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--accent);
    padding: var(--space-xs) var(--space-sm);
    background: var(--accent-glow);
    border-radius: var(--radius-sm);
    text-decoration: none;
    transition: all var(--transition-fast);
    display: inline-block;
  }

  .tag:hover {
    background: var(--accent);
    color: var(--bg);
    transform: translateY(-2px);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--text-soft);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--accent);
  }

  .back-arrow {
    transition: transform var(--transition-fast);
  }

  .back-link:hover .back-arrow {
    transform: translateX(-4px);
  }

  /* Footer divider */
  .footer-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: var(--space-xl);
  }

  .footer-divider .line {
    height: 1px;
    width: 80px;
    background: var(--border);
  }

  .footer-divider .diamond {
    width: 6px;
    height: 6px;
    background: var(--accent);
    transform: rotate(45deg);
  }

  .mobile-back {
    display: none;
  }

  /* Back sidebar */
  .back-sidebar .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-mono);
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .back-sidebar .back-link:hover {
    color: var(--accent);
  }

  .back-sidebar .back-arrow {
    transition: transform var(--transition-fast);
  }

  .back-sidebar .back-link:hover .back-arrow {
    transform: translateX(-4px);
  }

  /* TOC sidebar */
  .toc-title {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: var(--text-muted);
    display: block;
    margin-bottom: 1rem;
  }

  .toc-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    border-left: 1px solid var(--border);
  }

  .toc-nav li {
    margin: 0;
  }

  .toc-nav li a {
    display: block;
    padding: 0.4rem 0 0.4rem 1rem;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.2s, border-color 0.2s;
    border-left: 2px solid transparent;
    margin-left: -1px;
  }

  .toc-nav li a:hover,
  .toc-nav li a.active {
    color: var(--accent);
    border-left-color: var(--accent);
  }

  .toc-nav li.toc-h3 a {
    padding-left: 1.5rem;
    font-size: 0.65rem;
  }

  /* Share section */
  .share-section {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .share-title {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: var(--text-muted);
    display: block;
    margin-bottom: 0.75rem;
  }

  .share-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .share-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border: 1px solid var(--border);
    background: transparent;
    color: var(--text-muted);
    text-decoration: none;
    transition: all 0.2s;
    cursor: pointer;
  }

  .share-btn:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  .share-btn.copied {
    border-color: #5bbfb2;
    color: #5bbfb2;
  }

  /* Hide sidebars on smaller screens */
  @media (max-width: 1024px) {
    .back-sidebar,
    .toc-sidebar {
      display: none;
    }

    .article-layout {
      padding: 0 1rem;
    }

    .mobile-back {
      display: inline-flex;
    }
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }

    .post-subtitle {
      font-size: 1.125rem;
    }
  }
</style>

<script is:inline>
  // Highlight current section in TOC as user scrolls
  document.addEventListener('DOMContentLoaded', function() {
    const tocLinks = document.querySelectorAll('.toc-nav a');
    const headings = document.querySelectorAll('.post-content h2, .post-content h3');

    if (tocLinks.length === 0 || headings.length === 0) return;

    function updateActiveLink() {
      let current = '';

      headings.forEach(function(heading) {
        const rect = heading.getBoundingClientRect();
        if (rect.top <= 150) {
          current = heading.id;
        }
      });

      tocLinks.forEach(function(link) {
        link.classList.remove('active');
        if (link.getAttribute('href') === '#' + current) {
          link.classList.add('active');
        }
      });
    }

    window.addEventListener('scroll', updateActiveLink, { passive: true });
    updateActiveLink();

    // Copy link button
    const copyBtn = document.querySelector('.copy-btn');
    if (copyBtn) {
      copyBtn.addEventListener('click', function() {
        const shareText = copyBtn.dataset.shareText;
        navigator.clipboard.writeText(shareText).then(function() {
          copyBtn.classList.add('copied');
          copyBtn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg>';
          setTimeout(function() {
            copyBtn.classList.remove('copied');
            copyBtn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>';
          }, 2000);
        });
      });
    }
  });
</script>
