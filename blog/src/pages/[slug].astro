---
import { getCollection, type CollectionEntry } from 'astro:content';
import Base from '../layouts/Base.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, subtitle, date, readTime, category, author, tags } = post.data;
const { Content } = await post.render();

// Generate OG image URL
const ogImage = `/og/${post.slug}.png`;
---

<Base title={title} description={subtitle} image={ogImage}>
  <article class="post">
    <div class="container">
      <!-- Post Header -->
      <header class="post-header">
        <div class="post-meta">
          <span class="category">{category}</span>
          <span class="divider">•</span>
          <time datetime={date.toISOString()}>
            {date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
          </time>
          <span class="divider">•</span>
          <span class="read-time">{readTime}</span>
        </div>

        <h1 class="post-title">{title}</h1>
        <p class="post-subtitle">{subtitle}</p>

        <div class="post-author">
          <span class="author-label">by</span>
          <span class="author-name">{author}</span>
        </div>
      </header>

      <!-- Post Content -->
      <div class="post-content">
        <Content />
      </div>

      <!-- Post Footer -->
      <footer class="post-footer">
        {tags && tags.length > 0 && (
          <div class="post-tags">
            {tags.map((tag) => (
              <span class="tag">#{tag}</span>
            ))}
          </div>
        )}

        <a href="/" class="back-link">
          <span class="back-arrow">←</span>
          <span>Back to all posts</span>
        </a>
      </footer>
    </div>
  </article>
</Base>

<style>
  .container {
    max-width: 720px;
  }

  .post-header {
    padding: var(--space-3xl) 0 var(--space-2xl);
    border-bottom: 1px solid var(--border);
    margin-bottom: var(--space-2xl);
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-bottom: var(--space-lg);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .category {
    color: var(--accent);
  }

  .divider {
    color: var(--text-dim);
  }

  .post-title {
    font-family: var(--font-gothic);
    font-size: 3rem;
    color: var(--text);
    margin-bottom: var(--space-md);
    line-height: 1.1;
  }

  .post-subtitle {
    font-size: 1.25rem;
    color: var(--text-soft);
    line-height: 1.5;
    margin-bottom: var(--space-lg);
  }

  .post-author {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .author-name {
    color: var(--text-soft);
  }

  /* Post Content Styles */
  .post-content {
    font-size: 1.0625rem;
    line-height: 1.75;
  }

  .post-content :global(h2) {
    font-family: var(--font-gothic);
    font-size: 1.75rem;
    color: var(--text);
    margin: var(--space-2xl) 0 var(--space-lg);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--border);
  }

  .post-content :global(h3) {
    font-family: var(--font-gothic);
    font-size: 1.25rem;
    color: var(--text);
    margin: var(--space-xl) 0 var(--space-md);
  }

  .post-content :global(p) {
    margin-bottom: var(--space-lg);
    color: var(--text-soft);
  }

  .post-content :global(strong) {
    color: var(--text);
    font-weight: 600;
  }

  .post-content :global(em) {
    font-style: italic;
  }

  .post-content :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-decoration-color: var(--accent-soft);
    text-underline-offset: 2px;
    transition: text-decoration-color var(--transition-fast);
  }

  .post-content :global(a:hover) {
    text-decoration-color: var(--accent);
  }

  .post-content :global(blockquote) {
    margin: var(--space-xl) 0;
    padding: var(--space-lg);
    padding-left: var(--space-xl);
    border-left: 3px solid var(--accent);
    background: var(--bg-card);
    border-radius: 0 var(--radius-md) var(--radius-md) 0;
  }

  .post-content :global(blockquote p) {
    margin-bottom: 0;
    font-style: italic;
    color: var(--text);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: var(--space-lg) 0;
    padding-left: var(--space-xl);
    color: var(--text-soft);
  }

  .post-content :global(li) {
    margin-bottom: var(--space-sm);
  }

  .post-content :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: var(--space-2xl) 0;
  }

  .post-content :global(pre) {
    margin: var(--space-xl) 0;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    margin: var(--space-xl) 0;
  }

  /* Post Footer */
  .post-footer {
    margin-top: var(--space-3xl);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--border);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-xl);
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--accent);
    padding: var(--space-xs) var(--space-sm);
    background: var(--accent-glow);
    border-radius: var(--radius-sm);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--text-soft);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--accent);
  }

  .back-arrow {
    transition: transform var(--transition-fast);
  }

  .back-link:hover .back-arrow {
    transform: translateX(-4px);
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }

    .post-subtitle {
      font-size: 1.125rem;
    }
  }
</style>
