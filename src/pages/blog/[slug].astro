---
import { getCollection } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();

// Calculate read time
const content = post.body || '';
const wordCount = content.split(/\s+/).filter(word => word.length > 0).length;
const readTime = Math.max(1, Math.ceil(wordCount / 200));

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
}

// Filter to h2 and h3 only for TOC
const tocHeadings = headings.filter(h => h.depth === 2 || h.depth === 3);
---

<BlogLayout title={post.data.title} description={post.data.description}>
  <div class="article-layout">
    <aside class="back-sidebar">
      <a href="/blog" class="back">&larr; Back to Blog</a>
    </aside>

    <article class="container">
      <header>
        <div class="meta">
          <span class="tag">{post.data.category}</span>
          <span class="read-time">{readTime} min read</span>
          <time>{formatDate(post.data.date)}</time>
        </div>
        <h1>{post.data.title}</h1>
        <p class="description">{post.data.description}</p>
      </header>

      <div class="content">
        <Content />
      </div>

      <footer>
        <div class="divider">
          <div class="line"></div>
          <div class="diamond"></div>
          <div class="line"></div>
        </div>
        <a href="/blog" class="back">&larr; Back to Blog</a>
      </footer>
    </article>

    <aside class="toc">
      {tocHeadings.length > 0 && (
        <nav class="toc-nav">
          <span class="toc-title">Contents</span>
          <ul>
            {tocHeadings.map(heading => (
              <li class={heading.depth === 3 ? 'toc-h3' : ''}>
                <a href={`#${heading.slug}`}>{heading.text}</a>
              </li>
            ))}
          </ul>
        </nav>
      )}

      <div class="share-section">
        <span class="share-title">Share</span>
        <div class="share-buttons">
          <a
            href={`https://x.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(`https://egregore.xyz/blog/${post.slug}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="share-btn"
            title="Share on X"
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://egregore.xyz/blog/${post.slug}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="share-btn"
            title="Share on LinkedIn"
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
          <button
            class="share-btn copy-btn"
            title="Copy link"
            data-url={`https://egregore.xyz/blog/${post.slug}`}
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
          </button>
        </div>
      </div>
    </aside>
  </div>
</BlogLayout>

<style is:global>
  .article-layout {
    display: flex !important;
    flex-direction: row !important;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    gap: 4rem;
    align-items: flex-start;
  }

  .article-layout > .back-sidebar {
    width: 120px;
    flex-shrink: 0;
    align-self: flex-start;
    padding-top: 2rem;
    order: 1;
    position: sticky;
    top: 7rem;
  }

  .article-layout > article {
    flex: 1;
    max-width: 720px;
    min-width: 0;
    order: 2;
  }

  .article-layout > .toc {
    width: 200px;
    flex-shrink: 0;
    align-self: flex-start;
    padding-top: 2rem;
    order: 3;
    position: sticky;
    top: 7rem;
    max-height: calc(100vh - 8rem);
    overflow-y: auto;
  }
</style>

<style>
  .container {
    padding: 2rem 0;
  }

  header {
    margin-bottom: 3rem;
  }

  .back {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #8a8578;
    text-decoration: none;
    display: inline-block;
    margin-bottom: 2rem;
  }

  .back:hover {
    color: #7A0F1B;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #7A0F1B;
  }

  .read-time {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.65rem;
    color: #8a8578;
  }

  time {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: #8a8578;
  }

  h1 {
    font-family: 'Cormorant Garamond', serif;
    font-size: 2.8rem;
    font-weight: 400;
    color: #1a1714;
    margin: 0 0 1rem;
    line-height: 1.2;
  }

  .description {
    font-size: 1.2rem;
    color: #8a8578;
    margin: 0;
  }

  .content {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .content :global(h2) {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.8rem;
    font-weight: 500;
    margin: 2.5rem 0 1rem;
    color: #1a1714;
    scroll-margin-top: 6rem;
  }

  .content :global(h3) {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.4rem;
    font-weight: 500;
    margin: 2rem 0 0.75rem;
    color: #1a1714;
    scroll-margin-top: 6rem;
  }

  .content :global(p) {
    margin: 1rem 0;
  }

  .content :global(a) {
    color: #7A0F1B;
    text-decoration: underline;
  }

  .content :global(blockquote) {
    border-left: 3px solid #7A0F1B;
    margin: 2rem 0;
    padding: 0.5rem 0 0.5rem 1.5rem;
    color: #8a8578;
    font-style: italic;
  }

  .content :global(code) {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.9em;
    background: #e8e4dc;
    padding: 0.2em 0.4em;
    border-radius: 3px;
  }

  .content :global(pre) {
    background: #2a1215;
    color: #F4F1EA;
    padding: 1.5rem;
    overflow-x: auto;
    border-radius: 4px;
    margin: 1.5rem 0;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
  }

  .content :global(ul), .content :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin: 0.5rem 0;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
  }

  footer {
    margin-top: 4rem;
    padding-top: 2rem;
  }

  .divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .line {
    height: 1px;
    width: 80px;
    background: #d4cfc5;
  }

  .diamond {
    width: 6px;
    height: 6px;
    background: #7A0F1B;
    transform: rotate(45deg);
  }

  /* Table of Contents */
  .toc-title {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: #8a8578;
    display: block;
    margin-bottom: 1rem;
  }

  .toc-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    border-left: 1px solid #d4cfc5;
  }

  .toc-nav li {
    margin: 0;
  }

  .toc-nav li a {
    display: block;
    padding: 0.4rem 0 0.4rem 1rem;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: #8a8578;
    text-decoration: none;
    transition: color 0.2s, border-color 0.2s;
    border-left: 2px solid transparent;
    margin-left: -1px;
  }

  .toc-nav li a:hover,
  .toc-nav li a.active {
    color: #7A0F1B;
    border-left-color: #7A0F1B;
  }

  .toc-nav li.toc-h3 a {
    padding-left: 1.5rem;
    font-size: 0.65rem;
  }


  /* Share buttons */
  .share-section {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid #d4cfc5;
  }

  .share-title {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: #8a8578;
    display: block;
    margin-bottom: 0.75rem;
  }

  .share-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .share-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border: 1px solid #d4cfc5;
    background: transparent;
    color: #8a8578;
    text-decoration: none;
    transition: all 0.2s;
    cursor: pointer;
  }

  .share-btn:hover {
    border-color: #7A0F1B;
    color: #7A0F1B;
  }

  .share-btn.copied {
    border-color: #2d8a4e;
    color: #2d8a4e;
  }

  /* Hide sidebars on smaller screens */
  @media (max-width: 1024px) {
    .back-sidebar,
    .toc {
      display: none;
    }

    .article-layout {
      padding: 0 1rem;
    }

    .container {
      padding: 2rem 1rem;
    }
  }
</style>

<script is:inline>
  // Highlight current section in TOC as user scrolls
  document.addEventListener('DOMContentLoaded', function() {
    const tocLinks = document.querySelectorAll('.toc-nav a');
    const headings = document.querySelectorAll('.content h2, .content h3');

    if (tocLinks.length === 0 || headings.length === 0) return;

    function updateActiveLink() {
      let current = '';

      headings.forEach(function(heading) {
        const rect = heading.getBoundingClientRect();
        if (rect.top <= 150) {
          current = heading.id;
        }
      });

      tocLinks.forEach(function(link) {
        link.classList.remove('active');
        if (link.getAttribute('href') === '#' + current) {
          link.classList.add('active');
        }
      });
    }

    window.addEventListener('scroll', updateActiveLink, { passive: true });
    updateActiveLink();

    // Copy link button
    const copyBtn = document.querySelector('.copy-btn');
    if (copyBtn) {
      copyBtn.addEventListener('click', function() {
        const url = copyBtn.dataset.url;
        navigator.clipboard.writeText(url).then(function() {
          copyBtn.classList.add('copied');
          copyBtn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg>';
          setTimeout(function() {
            copyBtn.classList.remove('copied');
            copyBtn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>';
          }, 2000);
        });
      });
    }
  });
</script>
